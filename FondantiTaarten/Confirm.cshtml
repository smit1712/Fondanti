<!DOCTYPE html> 
<html lang="en">
<head>
    <!-- Render Shared Header-->
    @RenderPage("~/_Shared/_Header.cshtml")
    <link rel="stylesheet" href="~/Confirm.css" />
</head>
<body>
    <!-- Render Shared Navbar-->
    @RenderPage("~/_Shared/_Navbar.cshtml")
    <div class="container"  style="margin-top: 20px">
        <div class="row">
            <!--In deze class moet de klant zijn gegevens invullen en dit komt aan de linker kant van de pagina te staan-->
            <div class="col-md-6">
                <!--In deze form kunnen klanten hun gegevens vullen-->
                <form>
                    <div class="gegevens">
                        <div class="container">
                            <h2>Gegevens</h2>
                            <!--Input Naam, Achternaam achter elkaar-->
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="naam" placeholder="Naam">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="achternaam" placeholder="Achternaam">
                                    </div>
                                </div>
                            </div>

                            <!--Input Email-->
                            <div class="form-group">
                                <input type="text" class="form-control" id="Email" placeholder="Email">
                            </div>

                            <!--Input Telefoonnummer-->
                            <div class="form-group">
                                <input type="text" class="form-control" id="Tlnummer" placeholder="Telefoon nummer">
                            </div>

                            <!--Input Adres, Huisnummer en Postcode achter elkaar-->
                            <div class="form-row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Adres" placeholder="Adres">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Huisnummer" placeholder="Huisnummer">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="Postcode" placeholder="Postcode">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!--In deze class kan de klant opmerking invullen en dit komt aan de rechter kant van de pagina te staan-->
            <div class="col-md-6">
                <h2>Opmerking</h2>
                <div class="form-group">
                    <textarea class="form-control" rows="8" id="comment"></textarea>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
